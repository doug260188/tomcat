pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                sh 'wget https://github.com/doug260188/tomcat/blob/main/dockerfile'
                sh 'docker build -t doug260188/tomcat:8.0 .'
            }
        }
        stage('Run Image') {
            steps {
                sh 'wget https://github.com/doug260188/tomcat/blob/main/docker-compose.yml'
                sh 'docker-compose up -d'
            }
        }
    
    }
}
